<odoo>
    <record id="wizard_update_currency_form_view" model="ir.ui.view">
        <field name="name">wizard.update.currency.form.view</field>
        <field name="model">wizard.update.invoice.currency</field>
        <field name="arch" type="xml">
            <form string="Update Currency">
                <group>
                    <group>
                        <field name="currency_id"/>
                    </group>
                </group>
                <footer>
                    <button string="Update" class="btn-primary" type="object" name="button_update_currency"/>
                    or
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_update_currency" model="ir.actions.act_window">
        <field name="name">Update currency of the Invoice</field>
        <field name="res_model">wizard.update.invoice.currency</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>