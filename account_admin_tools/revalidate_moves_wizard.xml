<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_revalidate_moves_wizard_form" model="ir.ui.view">
            <field name="name">revalidate_moves_wizard.form</field>
            <field name="model">revalidate_moves_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Revalidate account moves">
                    <label string="This wizard will revalidate the given account moves, so their analytic lines are regenerated." colspan="4"/>
                    <label string=""/>
                    <newline/>
                    <group string="Moves to revalidate" attrs="{'invisible': [('state','!=','ready')]}">
                        <field name="move_ids" colspan="4" nolabel="1"/>
                    </group>
                    <group string="Find moves with missing analytic lines" colspan="4" attrs="{'invisible': [('state','!=','new')]}">
                        <button string="Search for moves" name="action_find_moves_missing_analytic_lines" type="object" icon="gtk-ok" states="new" colspan="4"/>
                        <separator string="Filter for the moves" colspan="4"/>
                        <field name="period_ids" colspan="4"/>
                    </group>
                    <group colspan="4">
                        <button string="Cancel" special="cancel" icon="gtk-cancel" states="new,ready"/>
                        <button string="Skip" name="action_skip_new" type="object" icon="gtk-go-forward" states="new"/>
                        <button string="Revalidate selected moves" name="action_revalidate_moves" type="object" icon="gtk-apply" states="ready"/>
                        <button string="Done" special="cancel" icon="gtk-ok" states="done"/>
                    </group>
                    <field name="state" invisible="1"/>
                </form>
            </field>
        </record>

        <record id="action_revalidate_moves_wizard" model="ir.actions.act_window">
            <field name="name">Revalidate Account Moves (Regenerate Analytic Lines)</field>
            <field name="res_model">revalidate_moves_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_action_revalidate_moves_wizard"
            parent="menu_action_account_admin_tools"
            action="action_revalidate_moves_wizard"
            sequence="50"/>

    </data>
</openerp>
