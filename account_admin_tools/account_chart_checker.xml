<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_chart_checker_form" model="ir.ui.view">
            <field name="name">account_chart_checker.form</field>
            <field name="model">account_admin_tools.account_chart_checker</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Check the Chart of Accounts">
                    <label string="This wizard will search for problems in the Chart of Accounts:" colspan="4"/>
                    <label string="" colspan="4"/>
                    <label string="- It will verify that the preordered tree of accounts, that OpenERP uses to calculate the amounts, matches the parent-children structure" colspan="4"/>
                    <label string="" colspan="4"/>
                    <label string="A list with the problems found (if any) will be shown afterwards." colspan="4"/>
                    <label string="" colspan="4"/>
                    <group colspan="4">
                        <button string="Cancel" special="cancel" icon="gtk-cancel" states="new"/>
                        <button string="Check" name="action_check" type="object" icon="gtk-apply" states="new"/>
                    </group>

                    <field name="state" invisible="1"/>
                </form>
            </field>
        </record>

        <record id="account_chart_checker_problem_tree" model="ir.ui.view">
            <field name="name">account_chart_checker_problem.tree</field>
            <field name="model">account_admin_tools.account_chart_checker_problem</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Problems" colors="red:severity=='high';green:severity=='informative'">
                    <field name="problem"/>
                    <field name="severity"/>
                    <field name="account_id"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="action_account_chart_checker" model="ir.actions.act_window">
            <field name="name">Check the Chart of Accounts</field>
            <field name="res_model">account_admin_tools.account_chart_checker</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_chart_checker_form"/>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_action_account_chart_checker"
            parent="menu_action_account_admin_tools_repair"
            action="action_account_chart_checker"
            sequence="10"/>

    </data>
</openerp>
