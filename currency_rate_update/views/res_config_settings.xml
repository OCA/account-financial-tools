<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">currency_rate_update.res_config_settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h2[text()='Currencies']/following-sibling::div" position="inside">

                <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('group_multi_currency', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="auto_currency_up"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="auto_currency_up" string="Auto-download Rates"/>
                        <div class="text-muted">
                            Odoo Community Association (OCA) addition (non-enterprise).
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

</odoo>
