<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.account_bank_receipt</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='bank_cash']" position="after">
                <h2>Bank Receipt</h2>
                <div class="row mt16 o_settings_container" id="account_bank_receipt">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="account_bank_receipt_offsetting_account">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="bank_receipt_offsetting_account"/>
                             <div class="content-group">
                                <field name="bank_receipt_offsetting_account" class="o_light_label mt16" widget="radio"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': ['|', ('has_chart_of_accounts', '=', False), ('bank_receipt_offsetting_account', '!=', 'transfer_account')]}" id="account_bank_receipt_transfer_account_id">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="bank_receipt_transfer_account_id"/>
                            <field name="bank_receipt_transfer_account_id" class="oe_inline"
                                   context="{'default_reconcile': True}"
                            />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" id="account_bank_receipt_post_move">
                        <div class="o_setting_left_pane">
                            <field name="bank_receipt_post_move" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="bank_receipt_post_move"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
