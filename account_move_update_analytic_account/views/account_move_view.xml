<odoo>

    <record model="ir.ui.view" id="account_move_form_view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']"
                position="after"
            >
                <button
                    name="account_move_update_analytic_account.action_view_account_move_update_analytic_account"
                    string="Update Analytic Account"
                    type="action"
                    groups="analytic.group_analytic_accounting"
                    attrs="{'invisible': [('parent.state', '!=', 'posted'),]}"
                />
            </xpath>
            <xpath
                expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']"
                position="after"
            >
                <button
                    name="account_move_update_analytic_account.action_view_account_move_update_analytic_account"
                    string="Update Analytic Account"
                    type="action"
                    groups="analytic.group_analytic_accounting"
                    attrs="{'invisible': [('parent.state', '!=', 'posted'), ('display_type', 'in', ('line_section', 'line_note'))]}"
                />
            </xpath>
        </field>
    </record>

</odoo>
