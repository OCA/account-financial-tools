<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_documents_form" model="ir.ui.view">
            <field name="name">sale.order.documents.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_see_documents" type="object" icon="fa-files-o">
                        <field string="Documents" name="documents_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>