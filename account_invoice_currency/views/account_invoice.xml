<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ###############################################
                    INVOICE INHERITANCE
         ############################################### -->
        
    <!-- ## Suppliers ## -->
    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="name">Account invoice supplier (form) - add company currency</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fiscal_position_id']/.." position="after">
                <group string="Amounts in company currency">
                    <field name="cc_amount_untaxed"/>
                    <field name="cc_amount_tax"/>
                    <field name="cc_amount_total"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- ## Customers ## -->
    <record id="invoice_form" model="ir.ui.view">
        <field name="name">Account invoice (form) - add company currency</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_id']/.." position="after">
                <group string="Amounts in company currency">
                    <field name="company_currency_id" invisible="1"/>
                    <field name="cc_amount_untaxed" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                    <field name="cc_amount_tax" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                    <field name="cc_amount_total" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
