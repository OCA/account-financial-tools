<odoo>

    <record model="ir.ui.view" id="financial_move_debt_2pay_form">
        <field name="name">financial.move.debt.2pay.form (in financial)</field>
        <field name="model">financial.move</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="financial.financial_move_debt_base_form" />
        <field name="arch" type="xml">
            <xpath expr="//form[1]" position="attributes">
                <attribute name="string">Payable</attribute>
            </xpath>
            <field name="date_state" position="attributes">
                <attribute name="context">{'default_type': 'payment_item', 'default_amount_document': amount_residual, 'default_partner_id': partner_id, 'default_account_id': account_id, 'default_currency_id': currency_id, 'default_document_type_id': document_type_id, 'tree_view_ref': 'financial.financial_move_payment_base_tree', 'form_view_ref': 'financial.financial_move_payment_base_form'}</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="financial_move_debt_payment_item_form">
        <field name="name">financial.move.debt.payment.item.form (in financial)</field>
        <field name="model">financial.move</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="financial.financial_move_debt_base_form" />
        <field name="arch" type="xml">
            <xpath expr="//form[1]" position="attributes">
                <attribute name="string">Payment Items</attribute>
            </xpath>
            <xpath expr="//h1[@name='document_name']" position="after">
                <h3>
                    <label for="debt_id" string="Debito de Origem"/>
                    <field name="debt_id"/>
                </h3>
            </xpath>
            <xpath expr="//page[@name='payments']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="financial_move_debt_2pay_tree">
        <field name="name">financial.move.debt.2pay.tree (in financial)</field>
        <field name="model">financial.move</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="financial.financial_move_debt_base_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree[1]" position="attributes">
                <attribute name="string">Payables</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="financial_move_debt_payment_item_tree">
        <field name="name">financial.move.debt.payment.item.tree (in financial)</field>
        <field name="model">financial.move</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="financial.financial_move_debt_base_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree[1]" position="attributes">
                <attribute name="string">Payment Items</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="financial_move_debt_2pay_search">
        <field name="name">financial.move.debt.2pay.search (in financial)</field>
        <field name="model">financial.move</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="financial.financial_move_debt_base_search" />
        <field name="arch" type="xml">
            <xpath expr="//search[1]" position="attributes">
                <attribute name="string">Payables</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="financial_move_debt_payment_item_search">
        <field name="name">financial.move.debt.payment.item.search (in financial)</field>
        <field name="model">financial.move</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="financial.financial_move_debt_base_search" />
        <field name="arch" type="xml">
            <xpath expr="//search[1]" position="attributes">
                <attribute name="string">Payment Items</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="financial_move_debt_2pay_action">
        <field name="name">Payable</field>
        <field name="res_model">financial.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', '2pay')]</field>
        <field name="context">{'default_type': '2pay'}</field>
        <field name="search_view_id" ref="financial.financial_move_debt_2pay_search" />
    </record>

    <record model="ir.actions.act_window" id="financial_move_debt_payment_item_action">
        <field name="name">Payable</field>
        <field name="res_model">financial.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'payment_item')]</field>
        <field name="context">{'default_type': 'payment_item'}</field>
        <field name="search_view_id" ref="financial.financial_move_debt_payment_item_search" />
    </record>

    <record model="ir.actions.act_window.view" id="financial_move_debt_2pay_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="financial_move_debt_2pay_tree"/>
        <field name="act_window_id" ref="financial_move_debt_2pay_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="financial_move_debt_payment_item_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="financial_move_debt_payment_item_tree"/>
        <field name="act_window_id" ref="financial_move_debt_payment_item_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="financial_move_debt_2pay_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="financial_move_debt_2pay_form"/>
        <field name="act_window_id" ref="financial_move_debt_2pay_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="financial_move_debt_payment_item_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="financial_move_debt_payment_item_form"/>
        <field name="act_window_id" ref="financial_move_debt_payment_item_action"/>
    </record>

    <record model="ir.ui.menu" id="financial_move_debt_2pay_menu">
        <field name="name">Payable</field>
        <field name="parent_id" ref="financial_payable_menu"/>
        <field name="action" ref="financial_move_debt_2pay_action"/>
        <field name="sequence" eval="2"/>
    </record>

    <record model="ir.ui.menu" id="financial_move_debt_payment_item_menu">
        <field name="name">Payment Item</field>
        <field name="parent_id" ref="financial_payable_menu"/>
        <field name="action" ref="financial_move_debt_payment_item_action"/>
        <field name="sequence" eval="2"/>
    </record>

</odoo>
