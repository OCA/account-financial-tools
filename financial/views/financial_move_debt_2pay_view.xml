<odoo>

    <record model="ir.ui.view" id="financial_move_debt_2pay_form">
        <field name="name">financial.move.debt.2pay.form (in financial)</field>
        <field name="model">financial.move</field>
        <field name="type">form</field>
        <field name="copy_id" ref="financial.financial_move_debt_base_form" />
        <field name="arch" eval="False" />
    </record>

    <record model="ir.ui.view" id="financial_move_debt_2pay_tree">
        <field name="name">financial.move.debt.2pay.tree (in financial)</field>
        <field name="model">financial.move</field>
        <field name="type">tree</field>
        <field name="copy_id" ref="financial.financial_move_debt_base_tree" />
        <field name="arch" eval="False" />
    </record>

    <record model="ir.ui.view" id="financial_move_debt_2pay_search">
        <field name="name">financial.move.debt.2pay.search (in financial)</field>
        <field name="model">financial.move</field>
        <field name="type">search</field>
        <field name="copy_id" ref="financial.financial_move_debt_base_search" />
        <field name="arch" eval="False" />
    </record>

    <record model="ir.ui.view" id="financial_move_debt_2pay_inherited_form">
        <field name="name">financial.move.debt.2pay.inherited.form (in financial)</field>
        <field name="model">financial.move</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="financial.financial_move_debt_2pay_form" />
        <field name="arch" type="xml">
            <xpath expr="//form[1]" position="attributes">
                <attribute name="string">Payable</attribute>
            </xpath>
            <field name="payment_ids" position="attributes">
                <attribute name="context">{'default_type': 'payment_item', 'default_amount_document': amount_residual, 'default_account_id': account_id, 'tree_view_ref': 'financial.financial_move_payment_base_tree', 'form_view_ref': 'financial.financial_move_payment_base_form'}</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="financial_move_debt_2pay_inherited_tree">
        <field name="name">financial.move.debt.2pay.inherited.tree (in financial)</field>
        <field name="model">financial.move</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="financial.financial_move_debt_2pay_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree[1]" position="attributes">
                <attribute name="string">Payables</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="financial_move_debt_2pay_inherited_search">
        <field name="name">financial.move.debt.2pay.inherited.search (in financial)</field>
        <field name="model">financial.move</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="financial.financial_move_debt_2pay_search" />
        <field name="arch" type="xml">
            <xpath expr="//search[1]" position="attributes">
                <attribute name="string">Payables</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="financial_move_debt_2pay_action">
        <field name="name">Payable</field>
        <field name="res_model">financial.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', '2pay')]</field>
        <field name="context">{'default_type': '2pay'}</field>
        <field name="search_view_ref" ref="financial.financial_move_debt_2pay_search" />
    </record>

    <record model="ir.actions.act_window.view" id="financial_move_debt_2pay_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="financial_move_debt_2pay_tree"/>
        <field name="act_window_id" ref="financial_move_debt_2pay_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="financial_move_debt_2pay_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="financial_move_debt_2pay_form"/>
        <field name="act_window_id" ref="financial_move_debt_2pay_action"/>
    </record>

    <record model="ir.ui.menu" id="financial_move_debt_2pay_menu">
        <field name="name">Payable</field>
        <field name="parent_id" ref="financial_dashboard_menu"/>
        <field name="action" ref="financial_move_debt_2pay_action"/>
        <field name="sequence" eval="2"/>
    </record>

</odoo>
