<odoo>
<data>

    <record model="ir.ui.view" id="financial_wizard_cashflow_form_view">
        <field name="name">financial.wizard.cashflow.form (in financial)</field>
        <field name="model">wizard.financial.cashflow</field>
        <field name="arch" type="xml">
            <form string="Financial Cashflow">
                <!-- TODO -->
                <group>
                    <group>
                        <field name="period"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name='doit'
                        string='OK'
                        class='btn-primary oe_highlight'
                        type='object'/>
                    or
                    <button string='Cancel'
                        class='btn-default oe_link'
                        special='cancel'/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="financial_cashflow_form_act_window">
        <field name="name">Financial Cashflow Form</field>
        <field name="res_model">wizard.financial.cashflow</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.menu" id="financial_cashflow_form_menu">
        <field name="name">Cashflow Form</field>
        <field name="parent_id" ref="financial_report_menu"/>
        <field name="action" ref="financial_cashflow_form_act_window"/>
        <field name="sequence" eval="18"/>
    </record>


</data>
</odoo>
