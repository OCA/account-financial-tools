<openerp>
<data>
    <record model="ir.ui.view" id="report_xlsx_financial_partner_statement_wizard_form">
        <field name="name">report.xlsx.financial.partner.statement.wizard.form (in financial)</field>
        <field name="model">report.xlsx.financial.partner.statement.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="main_info">
                    <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                </group>
                <group>
                    <field name="partner_id" />
                </group>
                <group string="Period">
                    <group>
                        <field name="date_from"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="generate_report" string="Generate" type="object"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="report_xlsx_financial_partner_statement_wizard_action">
        <field name="name">Financial Partner Statement</field>
        <field name="res_model">report.xlsx.financial.partner.statement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.menu" id="report_xlsx_financial_partner_statement_wizard_menu">
        <field name="name">Partner Statement</field>
        <field name="parent_id" ref="financial.financial_report_menu"/>
        <field name="action" ref="report_xlsx_financial_partner_statement_wizard_action"/>
        <field name="sequence" eval="4"/>
    </record>
</data>
</openerp>
