<odoo>
            <record id="ir_cron_scheduler_demo_action" model="ir.cron">
                <field name="name">Calculate Interest</field>
                <field name="model_id" ref="model_financial_move"/>
                <field name="state">code</field>
                <field name="code">model.doall()</field>
                <field name="interval_number">1</field>
                <field name="interval_type">days</field>
                <field name="numbercall">-1</field>
                <field name="user_id" ref="base.user_root"/>
            </record>

            <record id="ir_cron_scheduler_today_date" model="ir.cron">
                <field name="name">Update reference date today</field>
                <field name="user_id" ref="base.user_root"/>
                <field name="interval_number">1</field>
                <field name="interval_type">days</field>
                <field name="numbercall">-1</field>
                <field eval="True" name="doall"/>
                <field name="model_id" ref="model_res_company"/>
                <field name="state">code</field>
                <field name="code">model.cron_update_reference_date_today()</field>
            </record>

</odoo>
