<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock_account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div name="valuation_setting_container" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="restrict_price_change_valuation"
                >
                    <div class="o_setting_left_pane">
                        <field
                            name="restrict_account_move_line_change_after_valuation"
                        />
                    </div>
                    <div class="o_setting_right_pane">
                        <label
                            for="restrict_account_move_line_change_after_valuation"
                        />
                        <div class="text-muted">
                            Restrict account entries price change after stock valuation
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
