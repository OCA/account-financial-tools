<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="account_asset_profile_view_form" model="ir.ui.view">
            <field name="name">account.asset.profile.form</field>
            <field name="model">account.asset.profile</field>
        <field
            name="inherit_id"
            ref="account_asset_management.account_asset_profile_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='asset_product_item']" position="after">
                <field name="no_depreciation" />
            </xpath>
            <xpath expr="/form/group/group[3]" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('no_depreciation', '=', True)]}</attribute>
            </xpath>
            <xpath expr="/form/group/group[4]" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('no_depreciation', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
