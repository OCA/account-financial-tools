<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="account_asset_view_form">
        <field name="name">account.asset.form</field>
        <field name="model">account.asset</field>
        <field
            name="inherit_id"
            ref="account_asset_management.account_asset_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_check']" position="after">
                <field name="no_depreciation" />
            </xpath>
            <xpath expr="//notebook/page[1]/group[3]" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('no_depreciation', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
    <record id="account_asset_view_search" model="ir.ui.view">
        <field name="name">account.asset.search</field>
        <field name="model">account.asset</field>
        <field
            name="inherit_id"
            ref="account_asset_management.account_asset_view_search"
        />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='removed']" position="after">
                <filter
                    string="Non-Depreciation"
                    name="no_depreciation"
                    domain="[('no_depreciation', '=', True)]"
                />
            </xpath>
        </field>
    </record>
</odoo>
