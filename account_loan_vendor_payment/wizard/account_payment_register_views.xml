<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_register_loan_form" model="ir.ui.view">
        <field name="name">account.payment.register.loan.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form" />
        <field name="arch" type="xml">
            <field name='partner_bank_id' position="after">
                <field name="check_bills_currency" invisible="1" />
                <field
                    name="loan_payment"
                    attrs="{'invisible':['|', ('payment_type', '=', 'inbound'), ('check_bills_currency', '=', True)]}"
                />
                <field
                    name="loan_journal_id"
                    attrs="{'invisible':[('loan_payment', '=', False)]}"
                />
                <div
                    class="o_td_label"
                    attrs="{'invisible':['|', ('loan_journal_currency_id', '=', 'currency_id'), ('loan_journal_currency_id', '=', False)]}"
                >
                    <div class="o_form_label">Exchange rate</div>
                </div>
                <div
                    class="d-flex"
                    attrs="{'invisible':['|', ('loan_journal_currency_id', '=', 'currency_id'), ('loan_journal_currency_id', '=', False)]}"
                >
                    <span>1</span>
                    <field name="currency_id" readonly='True' />
                    <span>=</span>
                    <field name="exchange_rate" />
                    <field name="loan_journal_currency_id" />
                </div>
            </field>
        </field>
    </record>
</odoo>
