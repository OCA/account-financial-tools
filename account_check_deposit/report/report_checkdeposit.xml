<odoo>
    <template id="report_checkdeposit">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h1>Check Deposit nÂ° <span t-field="o.name" /></h1>
                        <div class="row mt32">
                            <div class="col-7">
                                <h3>Bank:</h3>
                                <span t-field="o.bank_journal_id.bank_account_id.bank_id.name"/>
                                <br />
                                <span t-field="o.bank_journal_id.bank_account_id.bank_id.street"/>
                                <br />
                                <span t-field="o.bank_journal_id.bank_account_id.bank_id.zip"/>
                                <span t-field="o.bank_journal_id.bank_account_id.bank_id.city"/>
                            </div>
                            <div class="col-5">
                                <h3>Beneficiary:</h3>
                                <span
                                    class="col-sm-4"
                                    t-field="o.company_id.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'
                                />
                            </div>
                        </div>
                        <div id="other_information" class="row mt32 mb32">
                            <div class="col-3" t-if="o.bank_journal_id.bank_account_id.acc_number" name="bank_acc_number">
                                <strong>Account Number:</strong>
                                <p class="m-0" t-field="o.bank_journal_id.bank_account_id.acc_number"/>
                            </div>
                            <div class="col-3" t-if="o.currency_id.name" name="currency_name">
                                <strong>Check Currency:</strong>
                                <p class="m-0" t-field="o.currency_id.name" />
                            </div>
                            <div class="col-3" t-if="o.deposit_date" name="deposit_date">
                                <strong>Transfer Date:</strong>
                                <p class="m-0" t-field="o.deposit_date" />
                            </div>
                            <div class="col-3" t-if="o.deposit_date" name="check_count">
                                <strong>Number of checks:</strong>
                                <p class="m-0" t-field="o.check_count" />
                            </div>
                        </div>
                        <h3>List of checks:</h3>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Reference</th>
                                    <th>Debtor</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.check_payment_ids" t-as="move_line">
                                    <tr>
                                        <td>
                                            <span t-field="move_line.date" />
                                        </td>
                                        <td>
                                            <span t-field="move_line.ref" />
                                        </td>
                                        <td>
                                            <span t-field="move_line.partner_id.name" />
                                        </td>
                                        <td>
                                            <t t-if="o.currency_id == o.company_id.currency_id">
                                                <span t-field="move_line.debit"/>
                                            </t>
                                            <t t-if="o.currency_id != o.company_id.currency_id">
                                                <span t-field="move_line.amount_currency"/>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td />
                                    <td />
                                    <td>
                                        <b>Total:</b>
                                    </td>
                                    <td>
                                        <b>
                                            <span t-field="o.total_amount"/>
                                        </b>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
