<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_form_view_rebuild_button">
            <field name="name">product.product.rebuild</field>
            <field name="model">product.product</field>
            <field name="groups_id" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_get_account_move_lines"
                            icon="fa-usd"
                            class="oe_stat_button"
                            string="Accounting Entries"
                            type="object"
                            groups="account.group_account_user"/>
                    <button string="Re-booking Picking Entries"
                            type="object"
                            name= "rebuild_moves"
                            attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}"
                            class="oe_stat_button" icon="fa fa-free-code-camp"
                            groups="base.group_no_one"/>
                    <button string="Clear reservation"
                            type="object"
                            name= "clear_reservation"
                            attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}"
                            class="oe_stat_button" icon="fa fa-shower"
                            groups="base.group_no_one"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="product_template_form_view_rebuild_button">
            <field name="name">product.template_rebuild</field>
            <field name="model">product.template</field>
            <field name="groups_id" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_get_account_move_lines"
                            icon="fa-usd"
                            class="oe_stat_button"
                            string="Accounting Entries"
                            type="object"
                            groups="account.group_account_user"/>
                    <button string="Re-booking Picking Entries"
                            type="object"
                            name= "rebuild_moves"
                            attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}"
                            class="oe_stat_button" icon="fa fa-free-code-camp"
                            groups="base.group_no_one"/>
                    <button string="Clear reservation"
                            type="object"
                            name= "clear_reservation"
                            attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}"
                            class="oe_stat_button" icon="fa fa-shower"
                            groups="base.group_no_one"/>
                </xpath>
<!--
                <field name="categ_id" position="after">
                    <field name="only_quants" groups="base.group_no_one"/>
                </field>
-->
            </field>
        </record>
        <record id="view_stock_product_tree2" model="ir.ui.view">
            <field name="name">product.stock.tree.account.2</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock_account.view_stock_product_tree2"/>
            <field name="arch" type="xml">
                <field name="qty_at_date" position="after">
                    <field name="account_qty_at_date"/>
                </field>
                <field name="stock_value" position="after">
                    <field name="history_value" sum="Stock History Valuation" widget="monetary" options="{'currency_field': 'cost_currency_id'}"/>
                    <field name="account_value" sum="Stock Account Valuation" widget="monetary" options="{'currency_field': 'cost_currency_id'}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
