<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="lawsuit_office_list_view" model="ir.ui.view">
      <field name="name">lawsuit office list view</field>
      <field name="model">lawsuit.office</field>
      <field name="arch" type="xml">
        <tree version="7.0" string="Lawsuit Office">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="lawsuit_office_form_view" model="ir.ui.view">
      <field name="name">lawsuit office form view</field>
      <field name="model">lawsuit.office</field>
      <field name="arch" type="xml">
        <form version="7.0" string="Lawsuit Office">
          <group>
            <field name="name"/>
            <field name="partner_id"/>
            <field name="fees_schedule_id"/>
            <field name="locations_ids" widget="many2many_tags"/>
          </group>
        </form>
      </field>
    </record>


    <record model="ir.actions.act_window" id="lawsuit_office_action">
      <field name="name">Lawsuit Office</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">lawsuit.office</field>
      <field name="domain"></field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="lawsuit_office_list_view"/>
    </record>

    <menuitem
        name="Lawsuit Offices"
        parent="account_credit_control.base_credit_control_configuration_menu"
        action="lawsuit_office_action"
        id="lawsuit_office_action_menu"/>

    <record id="add_office_to_location" model="ir.ui.view">
      <field name="name">add office to location</field>
      <field name="model">res.better.zip</field>
      <field name="inherit_id" ref="base_location.better_zip_form" />
      <field name="arch" type="xml">
        <field name="country_id" position="after">
          <field name="lawsuit_office_id"/>
        </field>
      </field>
    </record>

  </data>
</openerp>
