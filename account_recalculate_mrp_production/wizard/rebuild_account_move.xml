<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_rebuild_mrp_production" model="ir.ui.view">
        <field name="name">Rebuild acc. move on mrp production</field>
        <field name="model">wizard.rebuild.move.mrp.production</field>
        <field name="arch" type="xml">
            <form string="MRP productions" >
                <group>
                    <group>
                        <field name="company_id"/>
                    </group>
                </group>
                <footer>
                    <button name="rebuild_mrp_production" class="btn-primary" string="Go immediately" type="object"/>
                    <button name="server_rebuild_action" string="In background" type="object"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

   <act_window name="Rebuild acc. move on MRP Production"
        res_model="wizard.rebuild.move.mrp.production"
        src_model="mrp.production"
        view_mode="form"
        target="new"
        key2="client_action_multi"
        id="action_wizard_rebuild_mrp_production"
        view_id="wizard_rebuild_mrp_production"/>
</odoo>