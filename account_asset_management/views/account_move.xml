<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.account.asset.management</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" groups="account.group_account_invoice" icon="fa-cube" invisible="asset_count == 0" name="action_view_assets" type="object">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="asset_count"/>
                        </span>
                        <span class="o_stat_text">
                            Asset(s)
                        </span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="before">
                <field column_invisible="parent.move_type not in ('in_invoice', 'in_refund')" groups="account.group_account_invoice" name="asset_profile_id" optional="show"/>
                <field column_invisible="parent.move_type not in ('out_invoice', 'out_refund')" groups="account.group_account_manager,account.group_account_invoice" name="asset_id" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/form/sheet/group/field[@name='quantity']" position="before">
                <field column_invisible="parent.move_type not in ('in_invoice', 'in_refund')" name="asset_profile_id"/>
                <field column_invisible="parent.move_type not in ('out_invoice', 'out_refund')" groups="account.group_account_manager" name="asset_id"/>
            </xpath>
            <xpath expr="//notebook//field[@name='line_ids']/tree/field[@name='date_maturity']" position="after">
                <field domain="[('company_id','=', parent.company_id)]" groups="account.group_account_invoice" name="asset_profile_id" optional="hide"/>
                <field groups="account.group_account_manager,account.group_account_invoice" name="asset_id" optional="show"/>
            </xpath></field>
    </record>
</odoo>
