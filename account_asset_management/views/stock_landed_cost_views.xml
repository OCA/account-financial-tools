<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id='view_stock_landed_cost_form' model='ir.ui.view'>
            <field name="name">stock.landed.cost.form</field>
            <field name="model">stock.landed.cost</field>
            <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='valuation_adjustment_lines']/form/group" position="inside">
                    <group>
                        <field name="restatement_asset_id"/>
                        <field name="restatement_type"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='additional_landed_cost']" position="before">
                    <field name="restatement_asset_id"/>
                    <field name="restatement_type"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>