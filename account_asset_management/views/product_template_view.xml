<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="product_template_only_form_default_code_external_view">
        <field name="name">product.template.form.default_code_external.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="account_asset_ids" widget="many2many_tags" options="{'open_view': True}" readonly="1"/>
            </xpath>
        </field>
    </record>
    <record id="view_template_property_form" model="ir.ui.view">
        <field name="name">product.template.stock.property.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock_account.view_template_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting']/group" position="inside">
                <field name="asset_profile_id"/>
                <field name="tax_profile_id"/>
            </xpath>
        </field>
    </record>
</odoo>