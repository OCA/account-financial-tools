<odoo>

    <record id="view_account_move_reversal" model="ir.ui.view">
        <field name="name">account.move.reversal.form (in account_reversal)</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal" />
        <field name="arch" type="xml">
            <field name="reason" position="after">
                <!-- Add the reason field for normal entries too - See core view -->
                <field
                    name="reason"
                    attrs="{'invisible': [('move_type', '!=', 'entry')]}"
                />
                <field name="line_reason" />
            </field>
        </field>
    </record>

</odoo>
