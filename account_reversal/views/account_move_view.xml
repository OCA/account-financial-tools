<odoo>

    <record id="view_move_tree" model="ir.ui.view">
        <field name="name">Add to_be_reversed column</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree" />
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="to_be_reversed" />
            </field>
        </field>
    </record>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">Add to_be_reversed and reversal_id fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='other_info']//field[@name='reversed_entry_id']"
                position="before"
            >
                <field name="to_be_reversed" />
                <field
                    name="reversal_id"
                    attrs="{'invisible': [('move_type', '!=', 'entry')]}"
                />
            </xpath>
        </field>
    </record>

    <record id="view_account_move_filter" model="ir.ui.view">
        <field name="name">Add to_be_reversed filter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter" />
        <field name="arch" type="xml">
            <filter name="reversed" position="before">
                <filter
                    name="to_be_reversed"
                    string="To Be Reversed"
                    domain="[('to_be_reversed', '=', True)]"
                    help="Journal Entries to be Reversed"
                />
            </filter>

        </field>
    </record>


    <record id="action_move_to_be_reversed" model="ir.actions.act_window">
        <field name="name">Journal Entries to be Reversed</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_move_tree" />
        <field name="search_view_id" ref="view_account_move_filter" />
        <field name="context">{'search_default_to_be_reversed': 1}</field>
    </record>

    <menuitem
        id="menu_move_to_be_reversed"
        parent="account.menu_finance_entries_accounting_miscellaneous"
        sequence="80"
        name="Journal Entries to be Reversed"
        action="action_move_to_be_reversed"
    />

</odoo>
