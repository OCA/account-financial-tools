<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.sale.unreconciled</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='bank_cash']" position="after">
                <h2>Sale Reconciling</h2>
                <div class="row mt16 o_settings_container" id="sale_unreconciled">
                    <div
                        class="col-xs-12 col-md-6 o_setting_box"
                        id="sale_unreconciled_setting_account"
                    >                        <div>
                        <div class="o_setting_left_pane">
                                <field name="sale_lock_auto_reconcile" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sale_lock_auto_reconcile" />
                            <span
                                    class="fa fa-lg fa-building-o"
                                    title="Values set here are company-specific."
                                    role="img"
                                    aria-label="Values set here are company-specific."
                                    groups="base.group_multi_company"
                                />
                            <div class="text-muted">
                                Reconcile PO upon locking
                            </div>
                        </div>
                        <br />
                        </div>
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="sale_reconcile_account_id" />
                            <div class="content-group">
                                <field
                                    name="sale_reconcile_account_id"
                                    class="o_light_label mt16"
                                />
                            </div>
                            <label for="sale_reconcile_journal_id" />
                            <div class="content-group">
                                <field
                                    name="sale_reconcile_journal_id"
                                    class="o_light_label mt16"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
