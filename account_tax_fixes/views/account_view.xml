<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_taxes" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="toggle_use_refund" type="object"
                        class="oe_stat_button"
                        icon="fa fa-check">
                        <field name="use_refund" widget="boolean_button"
                            options='{"terminology": {"string_true": "Refund", "hover_true": "Standard", "string_false": "Standard", "hover_false": "Refund"}}'/>
                </button>
            </xpath>
            <!--
            <field name="analytic_tag_ids" position="after">
                <field name="tax_sign" groups="base.group_no_one"/>
            </field>
            -->
        </field>
    </record>
    <record id="view_tax_bg_form" model="ir.ui.view">
        <field name="name">account.tax.bg.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <field name="amount_type" position="after">
                <field name="tax_credit_payable"/>
            </field>
        </field>
    </record>
    <record id="account_tag_view_form" model="ir.ui.view">
        <field name="name">tag_addd_accounts_taxes</field>
        <field name="model">account.account.tag</field>
        <field name="inherit_id" ref="account.account_tag_view_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="code"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="parent_id"/>
                <field name="color_picker"/>
            </field>
            <xpath expr="//group" position="after">
                <group>
                    <group id="aplicability">
                        <field name="applicability" widget="selection"/>
                    </group>
                </group>
                <notebook>
                    <page string="Tax &amp; Accounts configuration" attrs="{'invisible':[('applicability','!=', 'accounts')]}">
                        <group>
                            <group id="links">
                                <label for="account_ids" attrs="{'invisible':[('applicability','!=', 'accounts')]}"/>
                                <field name="account_ids" widget="many2many_tags" nolabel="1"
                                    attrs="{'invisible':[('applicability','!=', 'accounts')]}"
                                    options="{'no_create_edit': True}"/>
                                <label for="tax_ids" attrs="{'invisible':[('applicability','!=', 'taxes')]}"/>
                                <field name="tax_ids" widget="many2many_tags" nolabel="1"
                                    attrs="{'invisible':[('applicability','!=', 'taxes')]}"
                                    options="{'no_create_edit': True}"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
