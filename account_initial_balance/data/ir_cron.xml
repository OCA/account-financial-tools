<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="ir_cron_rebuild_inventory_scheduler" model="ir.cron">
        <field name="name">Rebuild inventory Scheduler</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(hours=1)).strftime('%Y-%m-%d %H:%M:00')"/>
        <field name="model_id" ref="model_stock_inventory"/>
        <field name="state">code</field>
        <field name="code">model.background_toggle_is_initial_balance()</field>
    </record>

</odoo>