<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">Add document ref field</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="document_id"/>
            </field>
        </field>
    </record>

    <record id="view_account_move_filter" model="ir.ui.view">
        <field name="name">Add document ref search / group by</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="document_ref"/>
            </search>
            <group expand="0" position="inside">
                <filter name="document_ref" string="Document Ref" domain="[]"
                  context="{'group_by':'document_ref'}"/>
            </group>
        </field>
    </record>

</odoo>
